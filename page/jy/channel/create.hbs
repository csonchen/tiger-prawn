<form class="form-horizontal model-editor" method="post" enctype="multipart/form-data" id="channel-editor" data-target="channel">
    <fieldset>
        <a name="basic-info"></a>
        <legend>基础信息</legend>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="name">渠道名称</label>
            <div class="col-sm-10">
                <input name="name" id="name" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="company">所属公司</label>
            <div class="col-sm-10">
                <input name="company" id="company" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="type">合作范围</label>
            <div class="col-sm-10">
                <select name="type" id="type" class="form-control" required>
                    <option value="1">中国</option>
                    <option value="2">外国</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="telephone">联系方式</label>
            <div class="col-sm-10">
                <input name="telephone" id="telephone" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="address">通讯地址</label>
            <div class="col-sm-10">
                <input name="address" id="address" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="comment">备注</label>
            <div class="col-sm-10">
                <textarea class="form-control" rows="6" name="comment" id="comment" maxlength="1024"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="birthday">客户生日</label>
            <div class="col-sm-10">
                <input type="date" name="birthday" id="birthday" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="weibo">客户微博</label>
            <div class="col-sm-10">
                <input name="weibo" id="weibo" class="form-control"/>
            </div>
        </div>
    </fieldset>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="alert alert-msg" style="display: none;"></div>
            <button class="btn btn-block btn-lg btn-primary"><i class="fa fa-save"></i> 提交</button>
        </div>
    </div>
</form>